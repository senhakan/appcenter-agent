server:
  url: "http://10.6.100.170:8000"
  verify_ssl: false

agent:
  version: "0.1.27"
  uuid: ""
  secret_key: ""

heartbeat:
  interval_sec: 60

system_profile:
  report_interval_min: 720

remote_support:
  enabled: false
  approval_timeout_sec: 30

download:
  temp_dir: "C:\\ProgramData\\AppCenter\\downloads"
  bandwidth_limit_kbps: 1024

install:
  timeout_sec: 1800
  enable_auto_cleanup: true

update:
  auto_apply: true
  service_name: "AppCenterAgent"
  helper_path: "C:\\Program Files\\AppCenter\\appcenter-update-helper.exe"

logging:
  level: "info"
  file: "C:\\ProgramData\\AppCenter\\logs\\agent.log"
  max_size_mb: 10
  max_backups: 5
